{
  // 改行コードをLFに統一
  "files.eol": "\n",

  // 保存時にフォーマットを実行
  "editor.formatOnSave": true,

  // デフォルトのフォーマッターとしてPrettierを指定（拡張機能ID: esbenp.prettier-vscode）
  "editor.defaultFormatter": "esbenp.prettier-vscode",

  // 保存時にESLintによる自動修正を実行
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
  },

  // ESLintのフォーマット機能自体を無効化（Prettierに任せる）
  "eslint.format.enable": false,

  // ファイルのネスト機能
  "explorer.fileNesting.enabled": true,
  "explorer.fileNesting.patterns": {
    "*.ts": "${capture}.js",
    "*.js": "${capture}.js.map, ${capture}.min.js, ${capture}.d.ts",
    "*.jsx": "${capture}.js",
    "*.tsx": "${capture}.ts",
    "tsconfig.json": "tsconfig.*.json",
    "package.json": "package-lock.json, yarn.lock, pnpm-lock.yaml, bun.lockb, .gitignore, .prettierrc, eslint.config.mjs"
  }
}
